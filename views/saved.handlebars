<nav class="navbar navbar-expand-lg navbar-light bg-light">
    <a class="navbar-brand" href="#">MongoScraper</a>
    <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNavAltMarkup" aria-controls="navbarNavAltMarkup" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
    </button>
    <div class="collapse navbar-collapse" id="navbarNavAltMarkup">
        <div class="navbar-nav">
            <a class="nav-item nav-link" href="/">Home</a>
            <a class="nav-item nav-link" href="/saved">Saved</a>
            <button id="delete-articles-btn">Clear Results</button>
        </div>
    </div>
</nav>
<div class="card-columns">
    {{#each articles}}
    <div class="card" data='{{this._id}}'>
        <div class="card-body">
            <h5 class="card-title">{{this.headline}}</h5>
            <img src={{this.image}} class="card-img-top">
            <p>Author(s): {{this.author}}</p>
            <p class="card-text">{{this.summary}}</p>
            <a href={{this.url}}>{{this.url}}</a>
            <a class="btn btn-primary btn-notes">Article Notes</a>
            <a class="btn btn-primary btn-unsave" data-toggle="modal" data-target="#notes-modal">Delete from Saved</a>
        </div>
    </div>
    {{/each}}
    <!-- Modal -->
    <div class="modal fade"  tabindex="-1" id="notes-modal">
    </div>
</div>